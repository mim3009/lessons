package factory;

public class CalifornyStylePepperoniPizza extends Pizza {

	public CalifornyStylePapperoniPizza() {
		name = "Californy Style Deep Dish Cheese Pizza";
		dough = "Extra Thick Crust Dough";
		sauce = "Plum Tomato Sauce";
		
		toppings.add("Shredded Mozzarella Cheese");
		toppings.add("Grated Reggiano Cheese");
	}
	
}
