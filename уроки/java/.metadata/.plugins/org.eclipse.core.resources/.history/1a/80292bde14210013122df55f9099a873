
public class CalcClass {
private static double nextU(double u, double x, int i) {
		
		return u*x*x/(2*i-2)/(2*i-1);
		}
		public static double calcSinh(double x, double e) throws Exception{
			double u = x;
			double sum = u;
			int i = 1;
			while (Math.abs(u) > e){
				i++;
				if (x<1){
					throw new Exception("x must be <1");
				}
				u = nextU(u,x,i);
				sum += u;
			}
			return sum;
		}

}
